                <TextBlock x:ConnectionId='16' x:Name="txtRadio" Text="Radio" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='17' x:Name="txtLock" Text="Lock" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='18' x:Name="txtUmbrella" Text="Umbrella" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='19' x:Name="txtBike" Text="Bike" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='20' x:Name="txtCandles" Text="Candles" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='21' x:Name="txtMantis" Text="Mantis" Foreground="White" TextAlignment="Center" Visibility="Visible" />
            </StackPanel>
        </StackPanel>
        
        <Button x:ConnectionId='1' x:Name="btnRat" Background="White" Margin="167,288,0,39" Height="33" Width="39"                      Visibility="Visible" />
        <Button x:ConnectionId='2' x:Name="btnBaseball" Background="White" Margin="0,335,0,0" Height="25" Width="33"                           Visibility="Visible" />
        <Button x:ConnectionId='3' x:Name="btnDice" Background="White" Margin="322,345,0,0" Height="15" Width="47"                       Visibility="Visible" />
        <Button x:ConnectionId='4' x:Name="btnSpider" Background="White" Margin="509,151,0,176" Height="33" Width="37"                         Visibility="Visible" />
        <Button x:ConnectionId='5' x:Name="btnRadio" Background="White" Margin="69,214,0,115" Height="31" Width="44"                        Visibility="Visible" />
        <Button x:ConnectionId='6' x:Name="btnLock" Background="White" Margin="162,120,0,210" Height="30" Width="20"                       Visibility="Visible" />
        <Button x:ConnectionId='7' x:Name="btnUmbrella" Background="White" Margin="251,169,0,134" Height="57"                           Visibility="Visible" />
        <Button x:ConnectionId='8' x:Name="btnBike" Background="White" Margin="162,169,0,115" Height="76" Width="44"                       Visibility="Visible" />
        <Button x:ConnectionId='9' x:Name="btnCandles" Background="White" Margin="366,169,0,176" Width="39" Height="15"                          Visibility="Visible" />
        <Button x:ConnectionId='10' x:Name="btnMantis" Background="White" Margin="493,31,0,274" Height="55" Width="33"                         Visibility="Visible" />
    
    </Grid>
