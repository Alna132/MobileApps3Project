            <Image Source="/Images/chaos.jpg" />
            <StackPanel Orientation="Vertical">
                <!-- 10 items to find -->
                <TextBlock x:ConnectionId='11' x:Name="txtList" Text="To find:" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='12' x:Name="txtRat" Text="Rat" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='13' x:Name="txtBaseball" Text="Baseball" Foreground="White" TextAlignment="Center" Visibility="Visible" />
                <TextBlock x:ConnectionId='14' x:Name="txtDice" Text="Dice" Foreground="White" TextAlignment="Center" Visibility="Visible" />
